@page
@model LoginModel

@{
	ViewData["Title"] = "Đăng nhập";
}

<div class="account-container">
	<div class="account-box">
		@*<section>*@
		<form id="account" method="post" autocomplete="on">
			<h2 class="text-center mb-4">Đăng nhập</h2>
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="form-floating mb-3">
				<input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
				<label asp-for="Input.Email" class="form-label">Email</label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" placeholder="password" />
				<label asp-for="Input.Password" class="form-label">Password</label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="float-end mb-3">
				<a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Quên mật khẩu?</a>
			</div>
			@* <div class="checkbox mb-3">
				<div class="form-check">
					<input class="form-check-input" asp-for="Input.RememberMe" />
					<label asp-for="Input.RememberMe" class="form-label">
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
			</div> *@
			<div>
				<button id="login-submit" type="submit" class="account-button">Đăng nhập</button>
			</div>
			<div>
				<p class="text-center mt-2">
					Chưa có tài khoản? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Đăng ký</a>
				</p>

				<p class="text-center mt-2">
				<a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none mt-3">Gửi lại email xác nhận</a>
				</p>
			</div>

			
		</form>


		@*</section>*@

		<div class="col-md-6 col-md-offset-2">
			<section>
				<hr />
				@{
					if ((Model.ExternalLogins?.Count ?? 0) == 0)
					{
						<div>
							<p>
								There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
									article
									about setting up this ASP.NET application to support logging in via external services
								</a>.
							</p>
						</div>
					}
					else
					{
						<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
							<div>
								<p>
									@foreach (var provider in Model.ExternalLogins!)
									{
										<button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
									}
								</p>
							</div>
						</form>
					}
				}
			</section>
		</div>
	</div>



	
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
