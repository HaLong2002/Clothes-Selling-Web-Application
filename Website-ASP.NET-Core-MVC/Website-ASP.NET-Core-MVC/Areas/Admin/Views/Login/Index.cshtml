<body class="bg-soft">
    <main>
        <!-- Section -->
        <section class="vh-lg-100 d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center form-bg-image" data-background-lg="~/Admin/assets/img/illustrations/signin.svg">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="signin-inner my-3 my-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                            <div class="text-center text-md-center mb-4 mt-md-0">
                                <h1 class="mb-0 h3">Đăng nhập</h1>
                            </div>

                            <form id="account" method="post">
                                @* <h2 class="text-center mb-4">Đăng nhập</h2> *@
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.Email" class="form-control" autocomplete="on" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="@Model.Email" class="form-label">Email</label>
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.Password" class="form-control" autocomplete="on" aria-required="true" placeholder="password" />
                                    <label asp-for="@Model.Password" class="form-label">Password</label>
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>
                               @*  <div class="float-end mb-3">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Quên mật khẩu?</a>
                                </div> *@
                                <div class="checkbox mb-3">
                                    <label asp-for="@Model.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="@Model.RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                                <div>
                                    <button id="login-submit" type="submit" class="account-button">Đăng nhập</button>
                                </div>
                            </form>

