@model List<Website_ASP.NET_Core_MVC.Areas.Admin.Models.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Cập nhật vai trò";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Quản lý các vai trò người dùng</h2>
            Thêm/Xóa Vai trò cho Người dùng / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Cập nhật" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@ViewBag.userId" class="btn btn-primary" style="width:auto">Hủy</a>
        </div>
    </div>
</form>