@model Website_ASP.NET_Core_MVC.ViewModels.CustomerViewModel

@{
	ViewData["Title"] = "Đăng ký tài khoản";
}
<div class="row">
	<div class="col-12 text-center">
		<h2 class="custom-heading">ĐĂNG KÝ</h2>
	</div>
</div>

<form asp-action="SignUp" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row">
		<div class="col-md-6">
			<h3>Thông tin khách hàng</h3>
			<div class="form-group">
				<label asp-for="FullName" class="control-label">
					Họ và tên<span class="required">*</span>
				</label>
				<input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
				<span asp-validation-for="FullName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Phone" class="control-label">
					Số điện thoại<span class="required">*</span>
				</label>
				<input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Gender" class="control-label">Giới tính</label>
				<div>
					<input type="radio" asp-for="Gender" id="genderNu" value="Nữ" />
					<label for="genderNu" style="margin-right: 40px;">Nữ</label>

					<input type="radio" asp-for="Gender" id="genderNam" value="Nam" />
					<label for="genderNam" style="margin-right: 40px;">Nam</label>

					<input type="radio" asp-for="Gender" id="genderKhac" value="Khác" />
					<label for="genderKhac">Khác</label>
				</div>
				<span asp-validation-for="Gender" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Date" class="control-label">Ngày sinh</label>
				<input asp-for="Date" class="form-control" />
				<span asp-validation-for="Date" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address" class="control-label">
					Địa chỉ<span class="required">*</span>
				</label>
				<textarea asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" rows="4"></textarea>
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
		</div>

		<div class="col-md-6">
			<h3>Thông tin đăng ký</h3>
			<div class="form-group">
				<label asp-for="UserName" class="control-label">
					Tên đăng nhập<span class="required">*</span>
				</label>
				<input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập" />
				<span asp-validation-for="UserName" class="text-danger"></span>
				<span id="usernameAvailability" class="text-danger"></span> <!-- Message for username availability -->
			</div>
			<div class="form-group">
				<label asp-for="Email" class="control-label">
					Email<span class="required">*</span>
				</label>
				<input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" />
				<span asp-validation-for="Email" class="text-danger"></span>
				<span id="emailAvailability" class="text-danger"></span> <!-- Message for email availability -->
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label">
					Mật khẩu<span class="required">*</span>
				</label>
				<input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ConfirmPassword" class="control-label">
					Nhập lại mật khẩu<span class="required">*</span>
				</label>
				<input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" type="password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
	</div>

	<div class="form-group" style="display: flex; justify-content: center;" >
		<button type="submit" value="SignUpPage" class="sign-up-button" id="SignUpButton">Đăng ký</button>
	</div>
</form>

<div class="form-group" style="display: flex; justify-content: center;">
	<a asp-action="Login" class="login-link" >Đăng nhập</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#UserName').on('input', function () {
				const username = $(this).val();
				if (username) { // Only check if there's input
					$.get('@Url.Action("IsUsernameAvailable", "Customers")', { username: username }, function (data) {
						if (!data) {
							$('#usernameAvailability').text('Tên đăng nhập đã được sử dụng.').show();
						} else {
							$('#usernameAvailability').text('').hide();
						}
					});
				} else {
					$('#usernameAvailability').text('').hide();
				}
			});

			$('#Email').on('input', function () {
				const email = $(this).val();
				if (email) {
					$.get('@Url.Action("IsEmailAvailable", "Customers")', { email: email }, function (data) {
						if (!data) {
							$('#emailAvailability').text('Email đã được sử dụng.').show();
						} else {
							$('#emailAvailability').text('').hide();
						}
					});
				} else {
					$('#emailAvailability').text('').hide();
				}
			});

			$(document).ready(function () {
				$('#SignUpButton').on('click', function () {
					// Disable the button to prevent multiple clicks
					$(this).prop('disabled', true).text('Submitting...');
					// Optionally disable the entire form
					$(this).closest('form').submit();
				});
			});

		});
	</script>
}


